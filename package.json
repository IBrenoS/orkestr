{
  "name": "orkestr",
  "version": "0.1.0",
  "private": true,
  "description": "Orkestr — Plataforma de orquestração de fluxos empresariais",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev:api": "npm run start:dev --workspace=apps/api",
    "dev:worker": "npm run start:dev --workspace=apps/worker",
    "db:migrate": "npm run migrate:dev --workspace=packages/shared",
    "db:generate": "npm run generate --workspace=packages/shared",
    "db:studio": "npm run studio --workspace=packages/shared",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2"
  }
}
